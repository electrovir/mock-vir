{
    "name": "mock-vir",
    "version": "0.1.2",
    "description": "The heroic mock for anything.",
    "keywords": [
        "mock",
        "vir",
        "testing"
    ],
    "homepage": "https://github.com/electrovir/mock-vir",
    "bugs": {
        "url": "https://github.com/electrovir/mock-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/mock-vir"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "compile": "rm -rf dist && tsc --project tsconfig.json && tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
        "docs": "virmator docs --index src/index.ts README.md",
        "format": "virmator format",
        "prepublishOnly": "npm run compile && npm run test:all",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "virmator test && npm run test:types",
        "test:all": "npm run test:types && npm test && npm run test:spelling && npm run test:format && npm run test:docs",
        "test:coverage": "npm run test coverage",
        "test:docs": "virmator docs check --index src/index.ts README.md",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^19.3.1"
    },
    "devDependencies": {
        "@augment-vir/chai": "^19.3.1",
        "@augment-vir/node-js": "^19.3.1",
        "@electrovir/nyc": "^15.1.0-fix0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.6",
        "@types/mocha": "^10.0.2",
        "chai": "^4.3.10",
        "cspell": "^7.3.7",
        "esbuild": "^0.19.4",
        "istanbul-smart-text-reporter": "^1.1.2",
        "markdown-code-example-inserter": "^0.3.2",
        "mocha": "^10.2.0",
        "mocha-spec-reporter-with-file-names": "^0.0.3",
        "npm-check-updates": "~16.12.3",
        "nyc": "^15.1.0",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.6",
        "prettier-plugin-sort-json": "^2.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.25.1",
        "typescript": "^5.2.2",
        "virmator": "^8.0.4"
    }
}
